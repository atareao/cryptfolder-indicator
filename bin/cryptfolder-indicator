import os
import sys
import gi
gi.require_version('Gtk', '3.0')
from gi.repository import Gtk
from gi.repository import Notify

if __name__ == '__main__':
	if __file__.startswith('/opt/extras.ubuntu.com/cryptfolder-indicator') or os.getcwd().startswith('/opt/extras.ubuntu.com/cryptfolder-indicator'):
		sys.path.insert(1, '/opt/extras.ubuntu.com/cryptfolder-indicator/share/cryptfolder-indicator')
	else:
		sys.path.insert(1,os.path.normpath(os.path.join(os.getcwd(), '../src')))
	####################################################################
	import machine_information
	import com
	from cryptfolder_indicator import CryptFolderIndicator
	####################################################################
	print(machine_information.get_information())
	print('CryptFolder-Indicator version: %s'%com.VERSION)
	print('#####################################################')
	Notify.init('cryptfolder-indicator')
	cfi=CryptFolderIndicator()
	Gtk.main()
exit(0)
	
